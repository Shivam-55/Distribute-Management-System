<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set log level for com.impetus.dms package to DEBUG -->
    <logger name="com.example.inventoryservice" level="DEBUG" />

    <!-- Root logger captures log messages with level INFO or higher -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
